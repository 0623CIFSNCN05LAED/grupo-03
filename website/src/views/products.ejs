<!DOCTYPE html>
<html lang="es">
<head>
    <%- include("partials/head") %>
    <title>Products</title>
    <link href="/css/styleProducts.css" rel="stylesheet"/>
    <link href="/css/styleMain.css" rel="stylesheet"/>
    <script src="/js/burgerMenu.js" defer></script>
    <script src="/js/favoriteProduct.js" defer></script>
</head>
<body>
    <header>
        <%- include("partials/header") %>  
    </header>

    <main>
        <h1>Listado de Productos</h1>
        <!--<form action="/products/search" method="get">
            <input type="search" name="search" id="search">
            <button type="submit">Buscar productos</button>
        </form>-->
        <form action="/products/search" method="get" class="form-sb">
            <div class="search-sb">
                <input type="search" name="search" id="search" class="search" placeholder="Buscar un producto">
                <button type="submit" class="searchButton">
                    <i class="fa fa-search"></i>
                </button>
            </div>
        </form>

        <div class="products-list">
            <% for (let i = 0; i < products.length; i++) { %>
                <div class="product-card">
                    <% if(products[i].discount > 0){ %>
                        <div class="badge"><%= products[i].discount %>% off</div>
                    <% } %>
                    <a href="/products/detail/<%= products[i].id_product %>">
                    <div class="product-tumb">
                            <img src="<%= products[i].image[0].url_image %>" alt = "<%= products[i].name %>">
                    </div>
                    </a>
                    <div class="product-details">
                        <span class="product-catagory"><%= products[i].brand.brand %></span>
                        <h4><a href="/products/detail/<%= products[i].id_product %>" class="prod-name"><%= products[i].name %></a></h4>
                        <p><%= products[i].description.slice(0, 200)+'...' %><a href="/products/detail/<%= products[i].id_product %>"> Leer m√°s</a></p>
                        <div class="product-bottom-details">
                            <% if(products[i].discount == 0){ %>
                                <div class="product-price"><%= products[i].price %></div>
                            <% } else {%>
                                <div class="product-price"><small><%= products[i].priceWithDiscount %></small><%= products[i].price %></div>
                            <% } %>    
                            <div class="product-links">
                                <i class="fa fa-heart"></i>
                                <a href=""><i class="fa fa-shopping-cart"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
            <%   } %>
        </div>
    </main>

    <footer class="footer">
        <%- include("partials/footer") %>
    </footer>
</body>
</html>