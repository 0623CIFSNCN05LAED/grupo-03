<!DOCTYPE html>
<html lang="es">
<head>
    <%- include("partials/head") %>
    <title>Products</title>
    <link href="/css/styleProducts.css" rel="stylesheet"/>
    <link href="/css/styleMain.css" rel="stylesheet"/>
</head>
<body>
    <header>
        <%- include("partials/header") %>  
    </header>

    <main>
        <div class = "product-items">
            <% products.forEach(product => {%>
            <a href="/products/<%= product.id %>"> 
                <div class = "product">
                    <div class = "product-content">
                        <div class = "product-img">
                            <img src="<%= product.images[0] %>" alt = "<%= product.name %>">
                        </div>
                        <div class = "product-btns">
                            <button type = "button" class = "btn-cart"> AÃ±adir al carrito
                                <span><i class = "fas fa-plus"></i></span>
                            </button>
                            <button type = "button" class = "btn-buy"> Comprar ahora
                                <span><i class = "fas fa-shopping-cart"></i></span>
                            </button>
                        </div>
                    </div>
    
                    <div class = "product-info">
                        <div class = "product-info-top">
                            <h2 class = "sm-title"><%= product.brand %></h2>
                            <div class = "rating">
                                <span><i class = "fas fa-star"></i></span>
                                <span><i class = "fas fa-star"></i></span>
                                <span><i class = "fas fa-star"></i></span>
                                <span><i class = "fas fa-star"></i></span>
                                <span><i class = "far fa-star"></i></span>
                            </div>
                        </div>
                        <a href = "#" class = "product-name"><%= product.name %></a>
                        <% if(product.priceWithDiscount != product.price){ %>
                        <p class = "product-price product-price-withoutdiscount">$ <%= product.price %></p>
                        <% } %>
                        <p class = "product-price">$ <%= product.priceWithDiscount %></p>
                    </div>
                    <% if(product.discount > 0){ %>
                    <div class = "off-info">
                        <h2 class = "sm-title"><%= product.discount %>% off</h2>
                    </div>
                    <% } %>
                </div>
            </a>
            <%   }) %>
        </div>  
    </main>

    <footer class="footer">
        <%- include("partials/footer") %>
    </footer>
</body>
</html>