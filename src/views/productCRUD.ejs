<!DOCTYPE html>
<html lang="es">
<head>
    <%- include("partials/head") %>
    <title>Products CRUD</title>
    <link href="/css/styleProductCRUD.css" rel="stylesheet"/>
    <link href="/css/styleMain.css" rel="stylesheet"/>
</head>
<body>
    <header>
        <%- include("partials/header") %>  
    </header>

    <main>
        <section class="products-list">
            <h1 class="title-list">Listado de Productos</h1>
            <div class="headers">
                <div class="search-bar">
                    <input type="search" id="search" class="search" placeholder="Busqueda de productos"/>
                    <button type="submit" class="btn-search"><i class="fa fa-search"></i></button> 
                </div>
                <div class="create-btn">
                    <a href="/products/create/">
                        <button type="button" class="btn-add">Crear Producto
                            <span><i class="fa-solid fa-plus"></i></span>
                        </button>
                    </a>
                </div>
            </div>
            <div class="list">
                <ul class="products-table">
                    <li class="table-header">
                      <div class="col col-1">Nro.</div>
                      <div class="col col-2">Imagen</div>
                      <div class="col col-3">Nombre</div>
                      <div class="col col-4">Marca</div>
                      <div class="col col-5">Precio</div>
                      <div class="col col-6">Descuento</div>
                      <div class="col col-7">Acciones</div>
                    </li>
                    <% for (let i = 0; i < products.length; i++) { %> 
                    <li class="table-row">
                      <div class="col col-1"><%= i %></div>
                      <div class="col col-2">
                        <img class="prod-img" src="<%= products[i].image[0].url_image %>" alt = "<%= products[i].name %>">
                      </div>
                      <div class="col col-3"><%= products[i].name %></div>
                      <div class="col col-4"><%= products[i].brand.brand %></div>
                      <div class="col col-5"><%= products[i].price %></div>
                      <div class="col col-6"><%= products[i].discount %></div>
                      <div class="col col-7">
                        <a href="/products/<%= products[i].id_product %>">
                            <button type="button" class="btn-detail">Ver
                                <span><i class="fa-regular fa-pen-to-square"></i></span>
                            </button>
                        </a>
                        <a href="/products/edit/<%= products[i].id_product %>">
                            <button type="button" class="btn-edit">Editar
                                <span><i class="fa-regular fa-pen-to-square"></i></span>
                            </button>
                        </a>
                        <a href="/products/delete/<%= products[i].id_product %>">
                            <button type="button" class="btn-delete">Eliminar
                                <span><i class="fa-solid fa-minus"></i></span>
                            </button>
                        </a>
                      </div>
                    </li>
                    <%   } %>
                </ul>
            </div>
        </section>
    </main>
    
    <footer class="footer">
        <%- include("partials/footer") %>
    </footer>
    
</body>
</html>